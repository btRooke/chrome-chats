{
    "name": "Chrome Chats",
    "description": "Chat to people on the same site as you!",
    "version": "0.1",
    "manifest_version": 2,
    "background": {
        "scripts": ["socket.io.js", "background.js"],
        "persistent": false
    },
    "permissions": ["http://*/", "activeTab", "tabs"],
    "browser_action": {
        "default_popup": "popup_message_box.html",
        "default_icon": {
            "16": "assets/icons/logo_16.png",
            "32": "assets/icons/logo_32.png",
            "48": "assets/icons/logo_48.png",
            "128": "assets/icons/logo_128.png"
        }
    },
    "icons": {
        "16": "assets/icons/logo_16.png",
        "32": "assets/icons/logo_32.png",
        "48": "assets/icons/logo_48.png",
        "128": "assets/icons/logo_128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
