{
    "name": "Chrome Chats",
    "description": "Chat to people on the same site as you!",
    "version": "0.1",
    "manifest_version": 2,
    "background": {
        "scripts": ["socket.io.js", "background.js"],
        "persistent": false
    },
    "permissions": ["http://*/", "activeTab", "tabs", "webNavigation"],
    "browser_action": {
        "default_popup": "popup_message_box.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
